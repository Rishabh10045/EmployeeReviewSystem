
<h3 class="text-center mt-3" style="background-color: rgba(70, 186, 32, 0.751);">All Employees</h3>

<div class="container mt-4 " >

    <table class="table table-striped table-hover" >
        <thead>
            <tr style="background-color: rgba(234, 45, 99, 0.479);">
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">isAdmin</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>

        <tbody>
            <% for(let i=0;i < employees.length;i++){ %>
                <tr style="background-color: rgb(32, 186, 186);">
                <td><%=employees[i].name %></td>
                <td><%=employees[i].email %></td>
                <td><%=employees[i].password %></td>
                <td><%=employees[i].isAdmin %></td>
                <td>
                    <a href="/admin/delete-employee/<%=employees[i]._id%>" class="btn btn-danger">
                        Delete
                    </a>
                </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
